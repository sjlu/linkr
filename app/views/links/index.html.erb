<h1>Listing links</h1>

<table class="table table-bordered">
  <thead>
   <tr>
      <th>Hash</th>   
      <th>Url</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
    <tr>
      <td><%= Link.encode(link.id) %></td>
      <td><%= link.url %></td>
      <td>
        <%= link_to 'Show', link, :class => 'btn' %>
        <%= link_to 'Edit', edit_link_path(link), :class => 'btn' %>
        <%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn' %>
      </td>
    </tr>
    <% end %>
</table>

<br />

<%= link_to 'New Link', new_link_path, :class => 'btn' %>
